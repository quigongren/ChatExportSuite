{
  "manifest_version": 3,
  "name": "Chat Export Suite",
  "version": "3.2.0",
  "description": "Export ChatGPT conversations as PDF, HTML, Markdown, Text, and Markdown-for-DOCX.",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Chat Export Suite"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "export-print.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ]
}